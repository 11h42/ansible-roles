server {
    listen      80;
    server_name {{ nginx_server_name }};
    charset     utf-8;

    client_max_body_size {{ nginx_client_max_body_size }};

    location ~ /static/ {
        root   {{ application_static_folder_location }};
    }

    location / {
        include uwsgi_params;
        uwsgi_pass unix:{{ uwsgi_socket_path }};
    }
}